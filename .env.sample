# 모의투자 설정 (true: 모의투자, false: 실전투자)
USE_MOCK=false

# 디버그 모드 (true: 실시간 시세 계속 출력, false: 출력 안함)
DEBUG=false

# 실전투자 API KEY
KIWOOM_APP_KEY=your_real_app_key_here
KIWOOM_SECRET_KEY=your_real_secret_key_here

# 모의투자 API KEY
KIWOOM_MOCK_APP_KEY=your_mock_app_key_here
KIWOOM_MOCK_SECRET_KEY=your_mock_secret_key_here

# 자동매매 설정
ACCOUNT_NO=1234-5678             # 계좌번호
MAX_INVESTMENT=2000000           # 투자금 (기본: 2,000,000원)
TARGET_PROFIT_RATE=2.0           # 목표 수익률 (%) - 기본값: 2.0%

# 서버 설정
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
WEBSOCKET_PORT=8765

# 모니터링 설정
MARKET_OPEN_TIME=09:00           # 장 시작 시간
MARKET_CLOSE_TIME=15:30          # 장 마감 시간

# 매수 가능 시간 설정
BUY_START_TIME=09:00             # 매수 시작 시간
BUY_END_TIME=09:10               # 매수 종료 시간

# 매도 모니터링 설정
ENABLE_SELL_MONITORING=true      # 자동 매도 모니터링 활성화 (true: 활성화, false: 비활성화)

# 손절 설정
ENABLE_STOP_LOSS=true            # 손절 모니터링 활성화 (true: 활성화, false: 비활성화)
STOP_LOSS_RATE=-2.5              # 손절 수익률 (%) - 기본값: -2.5%

# 일일 강제 청산 설정
ENABLE_DAILY_FORCE_SELL=true     # 일일 강제 청산 활성화 (true: 활성화, false: 비활성화)
DAILY_FORCE_SELL_TIME=15:19      # 강제 청산 시간 (기본값: 15:19 - 장마감 11분 전)
